<section class="odd">
    <div class="container">
        <div class="row section-header">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">{{bicycles.title}}</h2>
                <h3 class="section-subheading text-muted">{{{bicycles.description}}}</h3>
            </div>
        </div>
        <div class="row text-center">
            {{#each bicycles.items }}
            <div class="col-md-4 col-sm-6 intro-item">
                <img class="img-thumbnail mb-4" src="{{{image}}}" alt="{{{title}}}">
                <h4 class="intro-heading">{{{title}}}</h4>
                <p class="intro-description">{{{description}}}</p>
            </div>
            {{/each}}
        </div>
    </div>
</section>